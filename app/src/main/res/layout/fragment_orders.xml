<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="@dimen/_10sdp"
tools:context=".fragments.Orders">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pick up Details"
       android:textStyle="bold"
       android:textSize="@dimen/_25sdp"
       android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach location"
        android:textSize="@dimen/_13sdp"/>
    <Button
        android:id="@+id/pinloco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Pin my location"/>
    <TextView
        android:id="@+id/loco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Location Instructions"
        android:textSize="@dimen/_13sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:ems="10"
        android:background="@drawable/textareastyle"
        android:gravity="left|top"
        android:hint="Write your comment.."
        android:inputType="textMultiLine"
        android:textSize="15sp">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/requstorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff45000"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Request  pickup"/>
</LinearLayout>